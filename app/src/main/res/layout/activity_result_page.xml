<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultPage">

    <TextView
        android:id="@+id/resultsTextView"
        android:layout_width="369dp"
        android:layout_height="134dp"
        android:layout_marginTop="12dp"
        android:hint="results text shows here"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/bRetakeQuiz"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="@+id/bReturnToMenu"
        app:layout_constraintTop_toBottomOf="@+id/resultsTextView2" />

    <TextView
        android:id="@+id/resultsTextView2"
        android:layout_width="348dp"
        android:layout_height="74dp"
        android:layout_marginTop="144dp"
        android:gravity="center"
        android:text="@string/resultText"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/resultsTextView"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/resultsTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bReturnToMenu"
        android:layout_width="187dp"
        android:layout_height="64dp"
        android:layout_marginTop="64dp"
        android:text="Back to Main Menu"
        app:layout_constraintEnd_toStartOf="@+id/bRetakeQuiz"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultsTextView" />

    <Button
        android:id="@+id/bRetakeQuiz"
        android:layout_width="187dp"
        android:layout_height="64dp"
        android:layout_marginTop="64dp"
        android:text="Re-Take Quiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bReturnToMenu"
        app:layout_constraintTop_toBottomOf="@+id/resultsTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>