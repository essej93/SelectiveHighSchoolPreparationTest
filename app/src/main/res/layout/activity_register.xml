<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/eRegisterPword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="enter password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/eRegisterPwordConfirm"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/eRegisterPwordConfirm"
        app:layout_constraintTop_toBottomOf="@+id/eRegisterUserName" />

    <EditText
        android:id="@+id/eRegisterUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:ems="10"
        android:hint="user name"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/eRegisterPword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/eRegisterPword"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/eRegisterPwordConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="confirm password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/bRegisterConfirm"
        app:layout_constraintStart_toStartOf="@+id/bBackRegister"
        app:layout_constraintTop_toBottomOf="@+id/eRegisterPword" />

    <Button
        android:id="@+id/bBackRegister"
        android:layout_width="165dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:text="Back"
        app:layout_constraintEnd_toStartOf="@+id/bRegisterConfirm"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eEmailRegister" />

    <Button
        android:id="@+id/bRegisterConfirm"
        android:layout_width="165dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:text="Confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bBackRegister"
        app:layout_constraintTop_toBottomOf="@+id/eEmailRegister" />

    <EditText
        android:id="@+id/eEmailRegister"
        android:layout_width="350dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="enter email address"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/bRegisterConfirm"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/bBackRegister"
        app:layout_constraintTop_toBottomOf="@+id/eRegisterPwordConfirm" />

</androidx.constraintlayout.widget.ConstraintLayout>