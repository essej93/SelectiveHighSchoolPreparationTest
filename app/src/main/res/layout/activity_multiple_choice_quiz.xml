<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MultipleChoiceQuiz">

    <LinearLayout
        android:id="@+id/multipleChoiceLayout"
        android:layout_width="377dp"
        android:layout_height="379dp"
        android:layout_marginTop="144dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textMultipleQuestion"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:hint="Question will be here"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/answerRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb1MultipleChoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="answer 1" />

            <RadioButton
                android:id="@+id/rb2MultipleChoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="answer 2" />

            <RadioButton
                android:id="@+id/rb3MultipleChoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="answer 3" />

            <RadioButton
                android:id="@+id/rb4MultipleChoice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="answer 4" />
        </RadioGroup>

        <Button
            android:id="@+id/bSubmitMultipleChoice"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:text="Submit" />

    </LinearLayout>

    <Button
        android:id="@+id/bNextMultipleChoice"
        android:layout_width="185dp"
        android:layout_height="59dp"
        android:layout_marginTop="56dp"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bBackMultipleChoice"
        app:layout_constraintTop_toBottomOf="@+id/multipleChoiceLayout" />

    <Button
        android:id="@+id/bBackMultipleChoice"
        android:layout_width="185dp"
        android:layout_height="59dp"
        android:layout_marginTop="56dp"
        android:text="Back"
        app:layout_constraintEnd_toStartOf="@+id/bNextMultipleChoice"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multipleChoiceLayout" />

    <ImageButton
        android:id="@+id/bMultipleChoiceInfo"
        android:layout_width="31dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/infoico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>