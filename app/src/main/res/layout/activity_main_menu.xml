<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <Button
        android:id="@+id/bLogout"
        android:layout_width="134dp"
        android:layout_height="54dp"
        android:layout_marginTop="60dp"
        android:text="Log off"
        app:layout_constraintEnd_toStartOf="@+id/bChangePword"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bViewAttempts" />

    <Button
        android:id="@+id/bChangePword"
        android:layout_width="134dp"
        android:layout_height="54dp"
        android:layout_marginTop="60dp"
        android:text="Change Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bLogout"
        app:layout_constraintTop_toBottomOf="@+id/bViewAttempts" />

    <Button
        android:id="@+id/bViewAttempts"
        android:layout_width="236dp"
        android:layout_height="59dp"
        android:layout_marginTop="28dp"
        android:text="View Past attempts"
        app:layout_constraintEnd_toEndOf="@+id/bChangePword"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/bLogout"
        app:layout_constraintTop_toBottomOf="@+id/quizListView" />

    <ListView
        android:id="@+id/quizListView"
        android:layout_width="390dp"
        android:layout_height="353dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>