<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePassword">

    <EditText
        android:id="@+id/eCurrentPword"
        android:layout_width="268dp"
        android:layout_height="50dp"
        android:layout_marginTop="212dp"
        android:ems="10"
        android:hint="current password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/eNewPword"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/eNewPword"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/eNewPword"
        android:layout_width="268dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="new password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/eConfirmNewPword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/eConfirmNewPword"
        app:layout_constraintTop_toBottomOf="@+id/eCurrentPword" />

    <EditText
        android:id="@+id/eConfirmNewPword"
        android:layout_width="268dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="confirm new password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/bConfirmPword"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/bCancel"
        app:layout_constraintTop_toBottomOf="@+id/eNewPword" />

    <Button
        android:id="@+id/bCancel"
        android:layout_width="168dp"
        android:layout_height="63dp"
        android:layout_marginTop="60dp"
        android:text="Cancel"
        app:layout_constraintEnd_toStartOf="@+id/bConfirmPword"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eConfirmNewPword" />

    <Button
        android:id="@+id/bConfirmPword"
        android:layout_width="168dp"
        android:layout_height="63dp"
        android:layout_marginTop="60dp"
        android:text="Confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bCancel"
        app:layout_constraintTop_toBottomOf="@+id/eConfirmNewPword" />

</androidx.constraintlayout.widget.ConstraintLayout>